<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="#F7FFFE"
    tools:context=".ui.home.actualizaReserva">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_Reservar"
        android:layout_width="250dp"
        android:layout_height="24dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Actualizacion de Reserva"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="50dp">

        <TextView
            android:id="@+id/txt_Habitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tipo de habitacion"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_tipoHabitacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_fechaEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Fecha Entrada"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_fechaEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/txt_fechaSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fecha Salida"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_fechaSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Actividades"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_actividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cantidad de personas"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/txt_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Telefono"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone" />

        <LinearLayout
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#009688"
                android:gravity="center_vertical"
                android:text="Actualizar"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#F44336"
                android:gravity="center_vertical"
                android:text="Eliminar"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>